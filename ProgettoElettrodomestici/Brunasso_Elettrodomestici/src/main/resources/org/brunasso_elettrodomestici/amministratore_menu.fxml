<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.brunasso_elettrodomestici.AdminController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #F7F9F9; -fx-font-family: 'Times New Roman'; -fx-padding: 20;">

    <!-- Titolo -->
    <Text text="Amministratore" style="-fx-font-size: 36px; -fx-fill: #2E86C1; -fx-font-weight: bold;"/>
    <!-- Titolo -->

    <!-- Sezione Bottoni -->
    <VBox spacing="20" alignment="CENTER">
        <Button fx:id="VisualizzaAggiungi" text="Inserisci Nuovo Ricambio"
                onAction="#VisualizzaAggiungiRicambio"
                style="-fx-font-size: 20px; -fx-background-color: #3498DB; -fx-text-fill: #FFFFFF;
                       -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10 20 10 20;"/>
        <Button fx:id="viewSparePartsButton" text="Visualizza Ricambi sotto Scorta e Percentuali"
                onAction="#VisualizzaPrezzi"
                style="-fx-font-size: 20px; -fx-background-color: #3498DB; -fx-text-fill: #FFFFFF;
                       -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10 20 10 20;"/>
    </VBox>
    <!-- Sezione Bottoni -->

</VBox>