<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.brunasso_elettrodomestici.ClientController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #F7F9F9; -fx-font-family: 'Times New Roman'; -fx-padding: 20;">

    <!-- Titolo -->
    <Text text="Negozio di Elettrodomestici" style="-fx-font-size: 36px; -fx-fill: #2E86C1; -fx-font-weight: bold;"/>
    <!-- Titolo -->

    <!-- Sezione Prodotti -->
    <VBox spacing="20" alignment="CENTER">
        <Label text="Seleziona i prodotti disponibili:" style="-fx-font-size: 18px; -fx-text-fill: #34495E;"/>
        <ListView fx:id="listViewProdotti" prefHeight="200" prefWidth="400"
                  style="-fx-background-color: #FFFFFF; -fx-border-color: #BDC3C7; -fx-border-radius: 8; -fx-padding: 5;"/>
    </VBox>
    <!-- Sezione Prodotti -->

    <!-- Pulsanti Azione -->
    <VBox spacing="20" alignment="CENTER">
        <Button fx:id="btnCarrello" text="Vai al Carrello" prefHeight="50" prefWidth="200"
                style="-fx-font-size: 20px; -fx-background-color: #3498DB; -fx-text-fill: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10 20 10 20;"/>
        <Button fx:id="btnRichiediPreventivo" text="Vai al Preventivo" prefHeight="50" prefWidth="200"
                style="-fx-font-size: 20px; -fx-background-color: #3498DB; -fx-text-fill: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10 20 10 20;"/>
    </VBox>
    <!-- Pulsanti Azione -->

</VBox>